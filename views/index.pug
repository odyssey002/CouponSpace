html
  head
    title Coupon Space
    link(rel='stylesheet', href='/static/css/styles.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Monoton&family=Rubik:wght@300;400;500;600;700;800;900&display=swap', rel='stylesheet')
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3', crossorigin='anonymous')

  body

    nav.navbar.navbar-expand-lg.bg-light.sticky-top
      .container-fluid
        a.navbar-brand.fs-5(href='/index') CouponSpace
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0.fs-5
            li.nav-item
              a.nav-link.active(aria-current='page', href='/index') Home
            li.nav-item
              a.nav-link(href='#footer_col') About
            li.nav-item
              a.nav-link(href='/contact' target='_blank') Add Coupon
          button.btn.btn-dark(type='button', onclick='location.href="/logout"') Logout

    main
      .position-relative.overflow-hidden.p-3.p-md-5.m-md-3.text-center.bg-light
        .col-md-5.p-lg-5.mx-auto.my-5
          h1.display-4.fw-normal Coupon Space
          p.lead.fw-normal
            | Welcome to the world, Where Saving Money is a Way of Life, Unleash the Power of Sharing and Saving!
          a.btn.btn-outline-secondary(href='/contact' target='_blank') Add Coupon
        .product-device.shadow-sm.d-none.d-md-block
        .product-device.product-device-2.shadow-sm.d-none.d-md-block

        
    ul   
      each item in data
        .user
          li
            span.label Name:
            span.value= item.name
          
          li
            span.label Phone:
            span.value= item.phone
          li
            span.label Email:
            span.value= item.email
          li
            span.label Coupon Name:
            span.value= item.couponName
          li
            span.label Details:
            span.value= item.details
          li
            span.label Expiry:
            span.value= item.expiry
        br

